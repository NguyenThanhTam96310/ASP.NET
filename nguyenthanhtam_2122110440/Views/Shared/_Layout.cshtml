<script>
    $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("GetCategories", "Home")',
            type: 'GET',
            success: function (data) {
                var categoryList = '';
                $.each(data, function (index, category) {
                    categoryList += '<a href="#">' + category.Name + '</a>';
                });
                $('#categoryDropdown').html(categoryList);
            }
        });
    });
</script>

